<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registration"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textColor="#6304FF"
        android:inputType="text"
        android:id="@+id/t1"></TextView>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t1"
        android:layout_centerHorizontal="true"
        android:ems="15"
        android:hint="Enter Your Name"
        android:layout_marginTop="10dp"
        android:id="@+id/name"></EditText>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_centerHorizontal="true"
        android:ems="15"
        android:inputType="phone"
        android:hint="Mobile"
        android:layout_marginTop="10dp"
        android:id="@+id/mobile"></EditText>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mobile"
        android:layout_centerHorizontal="true"
        android:ems="15"
        android:layout_marginTop="10dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:id="@+id/email"></EditText>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:inputType="textPassword"
        android:layout_centerHorizontal="true"
        android:ems="15"
        android:hint="Password"
        android:id="@+id/pwd"></EditText>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pwd"
        android:layout_centerHorizontal="true"
        android:ems="15"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        android:hint="Re enter password"
        android:id="@+id/cpwd"></EditText>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cpwd"
        android:layout_centerHorizontal="true"
        android:textColor="#ffff"
        android:text="Submit"
        android:textSize="30sp"
        android:layout_marginTop="10dp"
        android:background="@color/colorAccent"
        android:id="@+id/b1"></Button>
</RelativeLayout>